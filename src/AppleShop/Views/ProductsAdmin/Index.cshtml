@model IEnumerable<AppleShop.Models.SanPham>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sản phẩm";
    var vi = new System.Globalization.CultureInfo("vi-VN");
}
<div class="card card-soft">
    <div class="card-body">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">@TempData["msg"]</div>
        }

        <div class="d-flex gap-2 mb-3">
            <form method="get" class="d-flex gap-2 flex-grow-1">
                <input name="q" value="@ViewBag.Q" class="form-control" placeholder="Tìm tên sản phẩm..." />
                <button class="btn btn-outline-secondary">Lọc</button>
            </form>
            <a class="btn btn-primary" href="/admin/products/create">+ Thêm sản phẩm</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ảnh</th>
                        <th>Tên</th>
                        <th>Danh mục</th>
                        <th class="text-end">Giá bán</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        var img = string.IsNullOrEmpty(p.HinhAnh) ? "/imgs/no-image.png" : p.HinhAnh;
                        <tr>
                            <td>@p.SanPhamId</td>
                            <td><img src="@img" style="width:52px;height:52px;object-fit:cover;border-radius:8px" /></td>
                            <td>@p.Ten</td>
                            <td>@p.DanhMuc?.Ten</td>
                            <td class="text-end">
                                @p.GiaBan.ToString("N0", vi)đ
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary" href="/admin/products/edit/@p.SanPhamId">Sửa</a>
                                <form method="post" action="/admin/products/delete/@p.SanPhamId" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button class="btn btn-sm btn-outline-danger" onclick="return confirm('Xoá sản phẩm này?')">Xoá</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
