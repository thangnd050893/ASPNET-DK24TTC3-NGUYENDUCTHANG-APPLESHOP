@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Bảng điều khiển";
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />


</head>
<body>
    <div class="admin">
        <aside class="admin-aside">
            <div class="brand">
                <img src="~/imgs/logo.jpg" alt="brand" />
                <span>AppleShop THẮNG</span>
            </div>
            <nav class="menu">
                <a asp-controller="Admin" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-tachometer-alt fa-fw"></i> TỔNG QUAN
                </a>

                <div class="menu-head">
                    <i class="fa-solid fa-cogs fa-fw"></i> Quản lý
                </div>

                <a asp-controller="OrdersAdmin" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-shopping-cart fa-fw"></i> Đơn hàng
                </a>

                <a asp-controller="ProductsAdmin" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-box fa-fw"></i> Sản phẩm
                </a>

                <a asp-controller="CategoriesAdmin" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-sitemap fa-fw"></i> Danh mục
                </a>
                <a asp-controller="DashboardAdmin" asp-action="Index" class="menu-item">
                    <i class="fa-solid fa-chart-line fa-fw"></i> Báo Cáo Thống Kê
                </a>

            </nav>
            <form asp-controller="Account" asp-action="Logout" method="post" class="logout">
                <button class="btn btn-outline-danger w-100">Đăng xuất</button>
            </form>
        </aside>

        <main class="admin-main">
            <header class="admin-topbar">
                <div class="title">@title</div>
                <div class="right">
                    <span class="me-3 text-muted small">
                        Xin chào, @(User?.FindFirst("HoTen")?.Value ?? User?.Identity?.Name ?? "Admin Nguyễn Đức Thắng")
                    </span>

                </div>
            </header>
            <section class="admin-content">
                @RenderBody()
            </section>
        </main>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
