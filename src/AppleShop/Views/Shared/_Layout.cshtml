<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppleShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/topzone.css" />
    <script src="~/js/topzone.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="logo">
                    <a href="#">
                        <span class="logo-text">APPPLE<span class="zone">THẮNG</span></span>
                    </a>
                </div>

                <button class="menu-toggle" id="mobile-menu">☰</button>

                <ul class="nav-menu" id="nav-menu">
                    <li class="nav-item premium-badge">
                        <a href="#" class="nav-link">
                            <span class="apple-icon"></span>
                            <span>Premium<br>Reseller</span>
                        </a>
                    </li>
                    <li class="nav-item"><a href="#" class="nav-link">iPhone</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Mac</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">iPad</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Watch</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Tai nghe, Loa</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Phụ kiện</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">TekZone</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">TopCare</a></li>
                </ul>

                <div class="nav-icons">
                    <button class="icon-btn">🔍</button>
                    <button class="icon-btn cart-icon">
                        🛒
                        <span class="cart-badge">0</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AppleShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
