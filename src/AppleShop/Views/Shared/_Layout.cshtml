<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppleShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppleShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/topzone.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="logo">
                    <a href="/">
                        <span class="logo-text">APPPLE<span class="zone">THẮNG</span></span>
                    </a>
                </div>

                <button class="menu-toggle" id="mobile-menu">☰</button>

                <ul class="nav-menu" id="nav-menu">
                    <li class="nav-item premium-badge">
                        <a href="#" class="nav-link">
                            <span class="apple-icon"></span>
                            <span>Premium<br>Reseller</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Category" asp-route-id="1"
                           style="color:#fff; text-decoration:none; padding:0 15px; display:inline-block;">
                            iPhone
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Category" asp-route-id="3"
                           style="color:#fff; text-decoration:none; padding:0 15px; display:inline-block;">
                            Mac
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Category" asp-route-id="2"
                           style="color:#fff; text-decoration:none; padding:0 15px; display:inline-block;">
                            iPad
                        </a>
                    </li>

                    <li class="nav-item"><a href="#" class="nav-link">Watch</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Tai nghe, Loa</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Phụ kiện</a></li>
                    <li class="nav-item"><a href="/tra-cuu-don" class="nav-link">Tra Cứu Đơn Hàng</a></li>
                </ul>

                <div class="nav-icons">
                    <button class="icon-btn">🔍</button>
                    <a href="/cart" class="icon-btn cart-icon" style="position:relative;">
                        🛒
                        <span id="cart-count" class="cart-badge"
                              style="position:absolute; top:-5px; right:-10px; background:#ff4444; color:white;
                 font-size:13px; border-radius:50%; padding:2px 7px; min-width:20px; text-align:center;">
                            0
                        </span>
                    </a>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <div class="logo">
                        <a href="#">
                            <span class="logo-text">APPPLE<span class="zone">THẮNG</span></span>
                        </a>
                    </div>
                    <h3>Tổng đài</h3>
                    <div class="contact-info">
                        <div class="contact-label">Mua hàng:</div>
                        <a href="tel:1900969842" class="contact-number">1900 9698 42</a>
                        <span class="contact-time">(8:00 - 21:30)</span>
                    </div>
                    <div class="contact-info">
                        <div class="contact-label">Khiếu nại:</div>
                        <a href="tel:1900969841" class="contact-number">1900 9698 41</a>
                        <span class="contact-time">(8:00 - 21:30)</span>
                    </div>
                    <div class="social-links">
                        <a href="#"><svg viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" /></svg></a>
                        <a href="#"><svg viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" /></svg></a>
                    </div>
                </div>

                <div class="footer-column">
                    <h3>Hệ thống cửa hàng</h3>
                    <ul>
                        <li><a href="#">Xem cửa hàng</a></li>
                        <li><a href="#">Nội quy cửa hàng</a></li>
                        <li><a href="#">Chất lượng phục vụ</a></li>
                        <li><a href="#">Chính sách bảo hành</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Hỗ trợ khách hàng</h3>
                    <ul>
                        <li><a href="#">Điều kiện giao dịch</a></li>
                        <li><a href="#">Hướng dẫn mua hàng</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Hướng dẫn thanh toán</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Về AppleShop</h3>
                    <ul>
                        <li><a href="#">Tích điểm VIP</a></li>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Bán hàng doanh nghiệp</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="footer-info">
                    &copy; 2025 - AppleShop - Địa chỉ: 128 Trần Quang Khải, P.Tân Định, TP.HCM. Điện thoại: 028 38125960
                </div>
                <div class="footer-badges">
                    <img src="https://cdnv2.tgdd.vn/webmwg/2024/tz/images/certify-bct.png" alt="Badge">
                    <img src="https://images.dmca.com/Badges/_dmca_premi_badge_4.png?ID=4f44c8e7-b645-4ddb-8aec-c130d0598c85" alt="DMCA">
                </div>
            </div>
        </div>
    </footer>
    <script>
        async function updateCartCount() {
            try {
                const res = await fetch('/cart/count');
                const count = await res.text();
                document.getElementById('cart-count').innerText = count;
            } catch (e) {
                console.error("Không thể lấy số lượng giỏ hàng:", e);
            }
        }

        // Gọi khi load trang
        document.addEventListener('DOMContentLoaded', updateCartCount);
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/topzone.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
