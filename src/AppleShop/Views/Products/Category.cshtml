@model AppleShop.Models.ViewModels.CategoryVM

<div class="container mt-5">
    <h2 class="text-center mb-4"><i class="bi bi-apple"></i>@Model.TenDanhMuc</h2>

    <div class="row">
        @foreach (var sp in Model.SanPhams)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm border-0">
                    <img src="@Url.Content(sp.HinhAnh ?? "~/imgs/no-image.png")"
                         class="card-img-top" alt="@sp.Ten">
                    <div class="card-body text-center">
                        <h5 class="card-title">@sp.Ten</h5>
                        <p class="text-danger fw-bold">
                            @sp.GiaBan.ToString("N0") ₫
                        </p>
                        <a asp-controller="Products" asp-action="Detail" asp-route-id="@sp.Id"
                           class="btn btn-dark w-100">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
