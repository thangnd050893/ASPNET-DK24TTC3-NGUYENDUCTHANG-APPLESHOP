@model AppleShop.Models.DonHang
@{
    ViewData["Title"] = "Sửa đơn hàng";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Sửa đơn #@Model.MaDon</h5>
        <a class="btn btn-light border" href="/admin/orders/details/@Model.DonHangId">← Quay lại</a>
    </div>

    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <form method="post">
            @Html.AntiForgeryToken()
            <input asp-for="DonHangId" type="hidden" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Mã đơn</label>
                    <input asp-for="MaDon" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Họ tên</label>
                    <input asp-for="HoTen" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">SĐT</label>
                    <input asp-for="DienThoai" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">PT thanh toán</label>
                    <input asp-for="PhuongThucThanhToan" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Tổng tiền</label>
                    <input asp-for="TongTien" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        @for (int i = 0; i <= 4; i++)
                        {
                            string text = i == 0 ? "Nháp" :
                            i == 1 ? "Mới" :
                            i == 2 ? "Đang giao" :
                            i == 3 ? "Hoàn tất" : "Hủy";
                            <option value="@i" selected="@(Model.TrangThai == i ? "selected" : null)">@text</option>
                        }
                    </select>
                </div>

                <div class="col-md-12">
                    <label class="form-label">Ghi chú</label>
                    <textarea asp-for="GhiChu" class="form-control"></textarea>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary">Lưu</button>
                <a class="btn btn-secondary" href="/admin/orders/details/@Model.DonHangId">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
