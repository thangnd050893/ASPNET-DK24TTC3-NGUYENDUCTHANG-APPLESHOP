@model AppleShop.Controllers.OrdersIndexVM
@{
    ViewData["Title"] = "Danh sách đơn hàng";
    string fmtMoney(decimal v) => string.Format("{0:#,0}", v);
}

<h2 class="mb-3">Danh sách đơn hàng</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <input name="q" value="@Model.Q" class="form-control" placeholder="Tìm mã đơn / SĐT / tên">
    </div>
    <div class="col-md-2">
        <select name="status" class="form-select">
            <option value="">-- Trạng thái --</option>
            <option value="1" selected="@(Model.Status == 1)">Mới</option>
            <option value="2" selected="@(Model.Status == 2)">Đang giao</option>
            <option value="3" selected="@(Model.Status == 3)">Hoàn tất</option>
            <option value="4" selected="@(Model.Status == 4)">Hủy</option>
        </select>
    </div>
    <div class="col-md-2">
        <input type="date" name="from" value="@(Model.From?.ToString("yyyy-MM-dd"))" class="form-control">
    </div>
    <div class="col-md-2">
        <input type="date" name="to" value="@(Model.To?.ToString("yyyy-MM-dd"))" class="form-control">
    </div>
    <div class="col-md-1">
        <input type="number" name="pageSize" value="@Model.PageSize" min="5" max="100" class="form-control" title="Số dòng/trang">
    </div>
    <div class="col-md-2 d-grid">
        <button class="btn btn-primary">Lọc</button>
    </div>
</form>

@functions {
    // Tạo badge trạng thái (nếu TrangThai là int)
    string Badge(int st) => st switch
    {
        1 => "<span class='badge bg-secondary'>Mới</span>",
        2 => "<span class='badge bg-info text-dark'>Đang giao</span>",
        3 => "<span class='badge bg-success'>Hoàn tất</span>",
        4 => "<span class='badge bg-danger'>Hủy</span>",
        _ => "<span class='badge bg-light text-dark'>?</span>"
    };
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Mã đơn</th>
                <th>Ngày tạo</th>
                <th>Khách hàng</th>
                <th>SĐT</th>
                <th>SL</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th style="width:100px"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Count == 0)
            {
                <tr><td colspan="9" class="text-center text-muted">Không có đơn hàng</td></tr>
            }
            else
            {
                var stt = (Model.Page - 1) * Model.PageSize;
                foreach (var o in Model.Items)
                {
                    stt++;
                    <tr>
                        <td>@stt</td>
                        <td><strong>@o.MaDon</strong></td>
                        <td>@o.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@o.HoTen</td>
                        <td>@o.DienThoai</td>
                        <td>@o.SoLuong</td>
                        <td>@fmtMoney(o.TongTien)</td>
                        <td>@Html.Raw(Badge(o.TrangThai))</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/orders/@o.DonHangId">Xem</a>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @{
                int cur = Model.Page;
                int last = Model.TotalPages;
                string makeUrl(int p) =>
                Url.Action("Index", new
                {
                    q = Model.Q,
                    status = Model.Status,
                    from = Model.From?.ToString("yyyy-MM-dd"),
                    to = Model.To?.ToString("yyyy-MM-dd"),
                    page = p,
                    pageSize = Model.PageSize
                }) ?? "#";
            }
            <li class="page-item @(cur == 1 ? "disabled" : "")">
                <a class="page-link" href="@makeUrl(cur - 1)">«</a>
            </li>
            @for (int p = 1; p <= last; p++)
            {
                <li class="page-item @(p == cur ? "active" : "")">
                    <a class="page-link" href="@makeUrl(p)">@p</a>
                </li>
            }
            <li class="page-item @(cur == last ? "disabled" : "")">
                <a class="page-link" href="@makeUrl(cur + 1)">»</a>
            </li>
        </ul>
    </nav>
}
