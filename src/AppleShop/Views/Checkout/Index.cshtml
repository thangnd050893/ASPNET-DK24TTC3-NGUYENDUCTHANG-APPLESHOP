@model AppleShop.Models.ViewModels.CheckoutVM
@using System.Globalization
@{
    ViewData["Title"] = "Thanh Toán";
    var vi = new CultureInfo("vi-VN");
}

<style>
    body {
        background-color: #f4f4f5; /* Nền xám nhạt */
    }

    .checkout-container {
        max-width: 1100px;
    }

    /* Tùy chỉnh Tiêu đề */
    .checkout-title {
        font-weight: 600;
        color: #222;
        margin-bottom: 1.5rem; /* 24px */
    }

    /* Tùy chỉnh thẻ (Card) chung */
    .checkout-card {
        background-color: #ffffff;
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.07);
        padding: 2rem; /* 32px */
        height: 100%;
    }

        .checkout-card .card-title {
            font-weight: 600;
            color: #333;
            margin-bottom: 1.5rem;
        }

    /* Tùy chỉnh Form */
    .form-control, .form-select {
        border-radius: 12px;
        padding: 0.8rem 1rem;
        border: 1px solid #ddd;
        background-color: #f8f9fa;
        transition: all 0.2s ease;
    }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
        }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 4px;
    }

    /* Tùy chỉnh Tóm tắt đơn hàng */
    .product-list {
        padding-left: 0;
        list-style-type: none;
        margin-bottom: 1.5rem;
    }

    .product-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .product-item:first-child {
            padding-top: 0;
        }

    .product-details {
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .product-details img {
            width: 50px;
            height: 50px;
            object-fit: contain;
            border-radius: 8px;
            background-color: #f8f9fa;
            border: 1px solid #eee;
        }

    .product-info .name {
        font-weight: 600;
        color: #222;
        line-height: 1.4;
    }

    .product-info .quantity {
        font-size: 0.9rem;
        color: #666;
    }

    .product-price {
        font-weight: 600;
        color: #111;
        font-size: 0.95rem;
    }

    /* Khu vực tính tiền */
    .cost-summary .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.75rem;
        font-size: 1rem;
    }

        .cost-summary .summary-row span:first-child {
            color: #555;
        }

        .cost-summary .summary-row span.price {
            font-weight: 600;
            color: #333;
        }

    .cost-summary .summary-total {
        border-top: 1px dashed #ccc;
        padding-top: 1rem;
        margin-top: 1rem;
    }

        .cost-summary .summary-total span.total-label {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .cost-summary .summary-total span.total-value {
            font-size: 1.3rem;
            font-weight: 700;
            color: #d70018; /* Màu đỏ */
        }

    /* Nút Đặt hàng */
    .btn-place-order {
        background-color: #0d6efd;
        color: #ffffff;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 0.9rem 1.5rem;
        border-radius: 12px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-place-order:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }

</style>

<div class="container checkout-container py-4">
    <h2 class="checkout-title">Thanh toán</h2>

    <form asp-controller="Checkout" asp-action="PlaceOrder" method="post" class="row g-4 g-lg-5">
        @Html.AntiForgeryToken()

        <!-- Cột 1: Thông tin nhận hàng -->
        <div class="col-lg-7">
            <div class="checkout-card">
                <h5 class="card-title">Thông tin nhận hàng</h5>

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label"></label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên của bạn" />
                    <span class="text-danger" asp-validation-for="HoTen"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DienThoai" class="form-label"></label>
                    <input asp-for="DienThoai" class="form-control" placeholder="Nhập số điện thoại" />
                    <span class="text-danger" asp-validation-for="DienThoai"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label"></label>
                    <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ chi tiết (số nhà, đường, phường/xã,...)"></textarea>
                    <span class="text-danger" asp-validation-for="DiaChi"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GhiChu" class="form-label"></label>
                    <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Yêu cầu khác (nếu có)"></textarea>
                </div>

                <div class="mb-2">
                    <label asp-for="PhuongThucThanhToan" class="form-label"></label>
                    <select asp-for="PhuongThucThanhToan" class="form-select">
                        <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                        <option value="BANK">Chuyển khoản ngân hàng</option>
                        <option value="VNPAY">VNPay / QR</option>
                    </select>
                    <span class="text-danger" asp-validation-for="PhuongThucThanhToan"></span>
                </div>
            </div>
        </div>

        <!-- Cột 2: Tóm tắt đơn hàng -->
        <div class="col-lg-5">
            <div class="checkout-card">
                <h5 class="card-title">Đơn hàng của bạn</h5>

                <!-- Danh sách sản phẩm -->
                <ul class="product-list">
                    @foreach (var i in Model.Items)
                    {
                        <li class="product-item">
                            <div class="product-details">
                                <img src="@Url.Content(string.IsNullOrWhiteSpace(i.HinhAnh) ? "~/imgs/no-image.png" : i.HinhAnh)"
                                     alt="@i.Ten">
                                <div class="product-info">
                                    <span class="name">@i.Ten</span>
                                    <span class="quantity">x: @i.SoLuong</span>
                                </div>
                            </div>
                            <div class="product-price">
                                @((i.GiaBan * i.SoLuong).ToString("N0", vi))đ
                            </div>
                        </li>
                    }
                </ul>

                <!-- Tính tiền -->
                <div class="cost-summary">
                    <div class="summary-row">
                        <span>Tạm tính</span>
                        <span class="price">@Model.SubTotal.ToString("N0", vi)đ</span>
                    </div>
                    <div class="summary-row">
                        <span>Phí vận chuyển</span>
                        <span class="price">@Model.Shipping.ToString("N0", vi)đ</span>
                    </div>

                    <div class="summary-row summary-total">
                        <span class="total-label">Tổng cộng</span>
                        <span class="total-value">
                            @Model.Total.ToString("N0", vi)đ
                        </span>
                    </div>
                </div>

                <button class="btn-place-order w-100 mt-4" type="submit">
                    Đặt hàng ngay
                </button>
                <div class="text-muted small mt-3 text-center">
                    Bấm “Đặt hàng ngay” là bạn đã đồng ý với các <a href="#">điều khoản mua hàng</a> của AppleShop.
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}