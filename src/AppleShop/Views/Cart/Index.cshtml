@model AppleShop.Models.ViewModels.CartVM
@using System.Globalization

@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container" style="max-width:1000px;margin:40px auto;">
    <h1 class="mb-3">Giỏ hàng</h1>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">Giỏ hàng của bạn chưa có sản phẩm nào! <a asp-controller="Home" asp-action="Index">Tiếp tục mua sắm</a>.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th style="width:80px;"></th>
                        <th>Sản phẩm</th>
                        <th class="text-end" style="width:140px;">Đơn giá</th>
                        <th class="text-center" style="width:160px;">Số lượng</th>
                        <th class="text-end" style="width:140px;">Thành tiền</th>
                        <th style="width:80px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Items)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(string.IsNullOrWhiteSpace(i.HinhAnh) ? "~/imgs/no-image.png" : i.HinhAnh)"
                                     style="width:70px;height:70px;object-fit:contain;border-radius:8px;background:#f5f5f7;" />
                            </td>
                            <td>@i.Ten</td>
                            <td class="text-end">@i.GiaBan.ToString("N0", new CultureInfo("vi-VN"))₫</td>
                            <td class="text-center">
                                <form asp-action="Update" asp-controller="Cart" asp-route-id="@i.ProductId" method="post" class="d-inline-flex" style="gap:6px;justify-content:center;">
                                    <input type="number" name="qty" value="@i.SoLuong" min="1" class="form-control" style="width:90px;" />
                                    <button class="btn btn-outline-secondary" type="submit">Cập nhật</button>
                                </form>
                            </td>
                            <td class="text-end">@i.ThanhTien.ToString("N0", new CultureInfo("vi-VN"))₫</td>
                            <td>
                                <form asp-action="Remove" asp-controller="Cart" asp-route-id="@i.ProductId" method="post">
                                    <button class="btn btn-outline-danger" type="submit">Xoá</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2">Tổng cộng</th>
                        <th class="text-end"></th>
                        <th class="text-center">@Model.TongSoLuong</th>
                        <th class="text-end">@Model.TongTien.ToString("N0", new CultureInfo("vi-VN"))₫</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <form asp-action="Clear" asp-controller="Cart" method="post">
                <button class="btn btn-outline-secondary" type="submit">Xoá toàn bộ</button>
            </form>

            <a class="btn btn-dark" asp-controller="Checkout" asp-action="Index">Tiến hành đặt hàng →</a>
        </div>
    }
</div>
